{
    "version": 8,
    "configurePresets": [
        {
            "name": "clang",
            "displayName": "Clang-cl 20.1.8 x86_64-pc-windows-msvc",
            "description": "Using compilers: C = D:\\LLVM\\bin\\clang-cl.exe, CXX = D:\\LLVM\\bin\\clang-cl.exe",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
          "cacheVariables": {
            "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
            "CMAKE_C_COMPILER": "D:/LLVM/bin/clang-cl.exe",
            "CMAKE_CXX_COMPILER": "D:/LLVM/bin/clang-cl.exe",
            "CMAKE_CXX_STANDARD": "23",
            "CMAKE_BUILD_TYPE": "Debug"
          },
          "environment": {
            "CXXGLAGS":  "-std=c++23"
          }
        }
    ]
}